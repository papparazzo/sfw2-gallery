<li id="{{id}}" class="media">
    <a href="{{link}}" title="" style="border-bottom: none;">
        <img class="rounded mr-4 mb-5" src="{{previewImage}}" alt="{{position}}">
    </a>
    <div class="media-body mb-5">
        <h3 class="mb-2 mt-1">{{title}}</h3>
        <small style="font-style: italic;">
            <div>Erstellt von {{{creator}}} am {{date}}</div>
        </small>
        {{#if deleteAllowed}}
        <div class="mt-3">
            <button
                type="button"
                class="btn btn-danger btn-sm"
                data-toggle="modal"
                data-target="#deleteDialogModal"
                data-item-id="{{id}}"
            >
                l√∂schen
            </button>
        </div>
        {{else}}
        {{description}}
        {{/if}}
    </div>
</li>
